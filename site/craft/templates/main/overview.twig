<div class="fluid-container">
  <div id="home" class="navbar-buffer">
  </div>
  <div>
    <div class="image-cover img-responsive" style="position:relative">
      <img src="{{ entry.backgroundImage.first.url }}" id="overview_img" class="img-responsive" alt="Responsive image">
      {#<img src="{{ entry.backgroundImage.first.url }}" id="overview_img" style="height: 100vh; width: 100vw;" alt="Responsive image">#}
      {#<div class="container text-center" >#}
      <div class="text-overlay">
        <!-- <div class="row text-center" style="position:
            absolute; z-index: 1; top: 50%; left: 50%;"> -->
        <h3>{{ entry.quote }}</h3>
        <p>{{ entry.quoteAuthor }}</p>
        <!-- </div> -->
      </div>
    </div>
  </div>
  <div id="profile" class="navbar-buffer">
  </div>
  <div class="container">
    <div class="row text-center">
      <h2>Profile</h2>
    </div>

    <div class="row">
      <div class="col-md-4">
        <h4 class="text-center">Summary</h4>
        <p class="lead">{{ entry.summary }}</p>
      </div>
      <div class="col-md-4">
        <img src="{{ entry.profilePicture.first.url }}" style="max-width:250px " id="profil_pic"
             class="img-responsive img-circle center-block" alt="Responsive image">
        {#<img src="{{ overview?.profil_img.url }}" style="top: -150px; position: relative;left: 50px; max-width:280px " id="profil_pic" class="img-responsive img-rounded" alt="Responsive image">#}
      </div>
      <div class="col-md-4 text-center">

        <h3>Details</h3>
        <div>
          {% for detailsBlock in entry.details %}
            <h5 style="margin-bottom: 5px;">{{ detailsBlock.headline }} </h5>
            <em>{{ detailsBlock.body }}</em>
          {% endfor %}
        </div>
        <div>
          <h5 style="margin-bottom: 5px;">Age</h5>
          {#{% set currentDate = "now"|date("Y") %}#}
          {% set age =  date(entry.birth|date('Y/m/d')).diff(date('now'|date('Y/m/d'))) %}
          {#date("now").diff(entry.birth)|date("Y")#}
          <em>{{ age.format("%y") }} years old</em>
        </div>
        <ul id="social_links" style="list-style-type: none;">
          {% for socialLink in entry.socialLinks %}
            <li class="linkedin_button">
              <!-- <div id="linkedin_button" style="height:40px;margin: 10px"> -->
              <a href="{{ socialLink.urlLink }}" target="_blank">
                <img class="linkedin_button" src="{{ socialLink.logo.first.url }}">
              </a>
              <!-- </div> -->
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</div>